@PACKAGE_INIT@

set_and_check(MYSTL_INCLUDE_DIR "@PACKAGE_MYSTL_INCLUDE_DIR@")

if(NOT EXISTS "${MYSTL_INCLUDE_DIR}/mystl/stl.hpp")
    message(WARNING "MySTL headers not found in ${MYSTL_INCLUDE_DIR}")
endif()

include("${CMAKE_CURRENT_LIST_DIR}/mystl-targets.cmake")

set(MYSTL_VERSION @PROJECT_VERSION@)

include(CheckCXXCompilerFlag)
check_cxx_compiler_flag(-std=c++23 HAS_CXX23)
if(NOT HAS_CXX23)
    check_cxx_compiler_flag(-std=c++2b HAS_CXX2B)
    if(HAS_CXX2B)
        set(HAS_CXX23 TRUE)
    endif()
endif()

if(NOT HAS_CXX23)
    message(WARNING "MySTL requires C++23 support. Your compiler may not fully support it.")
endif()

check_required_components(mystl)

